@model EmprestimosModel

@{
    ViewData["title"] = "Excluir Empréstimo";
}


<div class="container-fluid bg-dark rounded-5 p-5 text-white">
    <h1 class="text-center mb-5 mt-2">Exclusão de Empréstimos</h1>
    <form method="post" asp-controller="Emprestimo" asp-action="ExcluirEmprestimo">

        <input type="hidden" asp-for="Id"/>


        <h5>Tem certeza que deseja excluir o registro abaixo ? </h5>
        <div class="mb-3">
            <label for="Recebedor" class="form-label">Recebedor</label>
            <input type="text" class="form-control" disabled asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo o equipamento?">

        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label">Fornecedor</label>
            <input type="text" class="form-control" disabled asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está fornecendo o equipamento?">
  
        </div>

        <div class="mb-3">
            <label for="Equipamento" class="form-label">Equipamento</label>
            <input type="text" class="form-control" disabled asp-for="EquipamentoEmprestado" id="Equipamento" placeholder="Qual é o equipamento que está sendo emprestado?">
   
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a type="button" class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>